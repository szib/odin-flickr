<div class="row border rounded p-3 bg-dark text-light">
  <div class="col">
    <h3 class="m-0"><%= @user.username %>'s public photos</h2>
  </div>
</div>

<div class="d-flex p-2 flex-wrap justify-content-center">
  <% @photos.each do |photo| %>
    <div class="p-1">
      <%# TODO: check if photo exists in that size %>
      <%= image_tag photo.square75.source_url, class: 'rounded' %>
    </div>
  <% end %>
</div>
