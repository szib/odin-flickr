
  <div class="d-flex p-2 flex-wrap justify-content-center">
    <% @photos.each do |photo| %>
      <div class="d-none d-md-flex p-2 m-1 border rounded">
        <a href="<%= photo.medium500.source_url %>">
          <%= image_tag photo.square150.source_url, class: 'rounded' %>
        </a>
      </div>
      <div class="d-flex d-md-none p-2 m-1 border rounded">
        <a href="<%= photo.medium500.source_url %>">
          <%= image_tag photo.square75.source_url, class: 'rounded' %>
        </a>
      </div>
    <% end %>
  </div>
